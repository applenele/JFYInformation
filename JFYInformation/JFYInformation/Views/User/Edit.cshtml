@model JFYInformation.Models.User
@{
    ViewBag.Title = "个人信息展示";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="head-tietle">个人信息修改</h1>

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { id = "frmEditUser" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="ID" value="@Model.ID" />
    <table class="detail-table">
        <tr>
            <td class="row-title">用户名</td>
            <td>
                @Model.Username
            </td>
        </tr>
        <tr>
            <td class="row-title">
                联系电话
            </td>
            <td>
                <input type="text" name="Phone" value="@Model.Phone" />
            </td>
        </tr>
        <tr>
            <td class="row-title">
                地址
            </td>
            <td>
                <input type="text" name="Address" value="@Model.Address" />
            </td>
        </tr>
        <tr>
            <td class="row-title">
                真实姓名
            </td>
            <td>
                <input type="text" name="RealName" value="@Model.RealName" />
            </td>
        </tr>
    </table>
    <p><input type="submit" class="button blue" value="保存" /></p>
    <p>@Html.ValidationSummary(true)</p>
}
