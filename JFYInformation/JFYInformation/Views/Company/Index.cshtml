@model IEnumerable<JFYInformation.Models.Company>
@{
    ViewBag.Title = "公司管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <div class="result-title">
        <h1 class="head-tietle">公司管理 <a href="/Admin/AddCompany">增加</a></h1>
    </div>
    <div class="result-content">
        <form class="search">
            检索：
            <input type="text" name="Begin" class="textbox datetime nullable" placeholder="发布时间(大于)" value="@Request.QueryString["Begin"]" />
            <input type="text" name="End" class="textbox datetime nullable" placeholder="发布时间(小于)" value="@Request.QueryString["End"]" />
            <input type="text" name="Key" class="textbox nullable" placeholder="关键字" />
            <input type="submit" class="btn btn-info" value="检索" />
        </form>
        <table class="table">
            <thead>
                <tr>
                    <td>编号</td>
                    <td>公司名</td>
                    <td>规模</td>
                    <td>电话</td>
                    <td>来源</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.ID">
                        <td>@item.ID</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Scale</td>
                        <td><img src="http://image.58.com/showphone.aspx?v=@item.Phone" alt="@item.CompanyName" /></td>
                        <td>@item.Source</td>
                        <td>
                            <a href="/Company/CompanyShow/@item.ID">详情</a>
                            <a href="javascript:deleteDialog('/Company/CompanyDelete/' + @item.ID + '?sid=@ViewBag.SID',@item.ID);">删除</a>
                            <a href="/Company/CompanyEdit/@item.ID">修改</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.MakePager()
    </div>
</div>

